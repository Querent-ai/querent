{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "rian",
    "version": "0.4.0"
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": [
          "**",
          "$CONFIG/*/**",
          "$APPCONFIG/**",
          "$APPCACHE/**"
        ]
      }
    },
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [
        "https://github.com/querent-ai/distribution/releases/latest/download/latest.json"
      ],
      "active": true,
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "TODO::ADD a key here"
    }
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "Querent AI LLC",
      "deb": {
        "depends": [
          "xdotool"
        ]
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "xyz.querent.rian",
      "longDescription": "R!AN is real time information aggregation network, that provides a new type of analytics system utilizing philosophy of data fabric with AI to derive deeper insights from data.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "R!AN is real time information aggregation network, that provides a new type of analytics system utilizing philosophy of data fabric with AI to derive deeper insights from data.",
      "targets": ["deb", "appimage", "nsis", "app", "dmg", "updater"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "endpoints": [
        "https://github.com/querent-ai/distribution/releases/latest/download/latest.json"
      ],
      "active": true,
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "TODO::ADD a key here"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "R!AN: Realtime Information Aggregation Network",
        "width": 800
      }
    ]
  }
}
